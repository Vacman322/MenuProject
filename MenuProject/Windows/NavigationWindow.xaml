<Window x:Class="MenuProject.Windows.NavigationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuProject.Windows"
        mc:Ignorable="d"
        Title="NavigationWindow" 
        Height="450" MinHeight="450" 
        Width="800" MinWidth="800">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Button Content="КанБан"
                    Click="KanBanClick"/>
            
            <Button Content="Вертикальное меню"
                    Click="MenuClick"
                    Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
